<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   	   
       <LinearLayout 
           android:layout_width="match_parent"
   	       android:layout_height="0dp"
   	       android:orientation="horizontal"
   	       android:layout_weight="4">
   	       
           <ImageView 
		       android:layout_width="45dp"
		       android:layout_height="match_parent" 
		       android:padding="5dp"
		       android:src="@drawable/tempernew"
		       android:contentDescription="@string/none"/>
           
           <TextView
		       android:id="@+id/textViewTemper"
		       android:layout_width="match_parent"
		       android:layout_height="match_parent"
		       android:textSize="48sp"
		       android:singleLine="true"
		       android:paddingLeft="5dp"
		       android:paddingRight="5dp"
		       android:gravity="center"/>
       </LinearLayout>
        
        <TextView  
			android:id="@+id/window_state" 
		    android:layout_width="match_parent" 
		    android:layout_height="0dp" 
		    android:layout_gravity="center_horizontal"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:textColor="@color/black"
			android:gravity="center"
			android:text="@string/select_auto"
		    android:layout_weight="1"/>
        
       <ImageView  
			android:id="@+id/imageButton_open" 
		    android:layout_width="match_parent" 
		    android:layout_height="0dp" 
		    android:src="@drawable/button_open" 
		    android:layout_gravity="center_horizontal"
		    android:contentDescription="@string/none"
		    android:padding="10dp"
		    android:layout_weight="4"/>
        
        <ImageView  
			android:id="@+id/imageButton_close" 
		    android:layout_width="match_parent" 
		    android:layout_height="0dp" 
		    android:src="@drawable/button_close" 
		    android:layout_gravity="center_horizontal"
		    android:contentDescription="@string/none"
		    android:padding="10dp"
		    android:layout_weight="4"/>
        
        <ImageView  
			android:id="@+id/imageButton_stop" 
		    android:layout_width="match_parent" 
		    android:layout_height="0dp" 
		    android:src="@drawable/button_stop" 
		    android:layout_gravity="center_horizontal"
		    android:contentDescription="@string/none"
		    android:padding="10dp"
		    android:layout_weight="4"/>
</LinearLayout>